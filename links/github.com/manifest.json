{
    "id": "GitHub",
    "version": "2020.07.13.01",
    "name": "GitHub, Inc",
    "owner": "GitHub, Inc",
    "domain": "github.com",
    "endpoints": [
        {
            "match": "/:org/:repo/issues/:id",
            "example": "https://github.com/microsoft/AdaptiveCards/issues/4369",
            "data": {
                "request": {
                    "url": "api.github.com/repos/:org/:repo/issues/:id",
                    "example": "https://api.github.com/repos/microsoft/AdaptiveCards/issues/4369"
                }
            },
            "content": {
                "type": "AdaptiveCard",
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                "version": "1.2",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "${substring(repository_url, 29, length(repository_url) - 29)} on {{DATE(${updated_at}, COMPACT)}}",
                        "size": "small",
                        "isSubtle": true
                    },
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "auto",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "${if(state == 'closed', '‚ùå', 'üü¢')}"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "type": "RichTextBlock",
                                        "inlines": [
                                            {
                                                "type": "TextRun",
                                                "text": "${title}",
                                                "weight": "Bolder",
                                                "size": "Medium"
                                            },
                                            {
                                                "type": "TextRun",
                                                "text": " #${number}",
                                                "isSubtle": true,
                                                "size": "Medium"
                                            }
                                        ],
                                        "spacing": "None"
                                    }
                                ],
                                "verticalContentAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "TextBlock",
                        "text": "${body}",
                        "fontType": "Monospace",
                        "wrap": true,
                        "maxLines": 2
                    },
                    {
                        "type": "RichTextBlock",
                        "inlines": [
                            {
                                "$data": "${labels}",
                                "type": "TextRun",
                                "text": "${if($index == count($root.labels) - 1, name, name + ' | ')}",
                                "color": "good",
                                "weight": "bolder"
                            }
                        ]
                    },
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "auto",
                                "items": [
                                    {
                                        "type": "Image",
                                        "url": "${assignee.avatar_url}",
                                        "size": "Small",
                                        "style": "Person",
                                        "width": "25px",
                                        "height": "25px",
                                        "spacing": "ExtraLarge"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "You are assigned and ${state}."
                                    }
                                ],
                                "verticalContentAlignment": "Center"
                            }
                        ],
                        "spacing": "Large",
                        "separator": true,
                        "$when": "${assignee.id == user.id}"
                    }
                ]
            }
        }
    ]
}