{
    "type": "AdaptiveComponent",
    "name": "schema.org/thing",
    "sampleData": {
        "name": "Adaptive Cards",
        "description": "An open-source, cross-platform card format",
        "image": "https://adaptivecards.io/content/adaptive-card-200.png"
    },
    "schema": {
        "properties": {
            "name": {
                "type": "string",
                "displayName": "Name"
            },
            "description": {
                "type": "string",
                "displayName": "Description",
                "editor:isMultiLine": true
            },
            "image": {
                "type": "string",
                "displayName": "Image"
            }
        }
    },
    "views": {
        "default": {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "${image}",
                    "altText": "Image for ${name}"
                },
                {
                    "type": "TextBlock",
                    "text": "${name}",
                    "weight": "bolder",
                    "size": "Medium"
                },
                {
                    "type": "TextBlock",
                    "text": "${description}",
                    "wrap": true,
                    "maxLines": 3,
                    "spacing": "small"
                }
            ]
        },
        "thumbnail": {
            "type": "ColumnSet",
            "columns": [{
                    "type": "Column",
                    "width": 1,
                    "items": [{
                            "type": "Image",
                            "url": "${image}"
                        }
                    ]
                }, {
                    "type": "Column",
                    "width": 3,
                    "items": [{
                            "type": "TextBlock",
                            "text": "${name}",
                            "weight": "bolder",
                            "size": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${description}",
                            "wrap": true,
                            "maxLines": 2,
                            "spacing": "none"
                        }
                    ]
                }
            ]   
        },
        "stack": { 
            "type": "Container",
            "backgroundImage": "${image}",
            "items": [{
                    "type": "TextBlock",
                    "text": "${name}",
                    "size": "large",
                    "weight": "bolder"
                }, {
                    "type": "TextBlock",
                    "text": "${description}",
                    "wrap": true,
                    "maxLines": 3
                }
            ]
        }
    }
}